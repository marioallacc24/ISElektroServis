        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" FontSize="15" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" >Klijnet duguje: 0</TextBlock>

    </Grid>
